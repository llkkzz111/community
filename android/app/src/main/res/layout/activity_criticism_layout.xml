<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--title bar-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要提意见"
            android:textColor="@color/text_black_333333"
            android:textSize="18sp"
            android:visibility="visible"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_grey_DDDDDD"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:paddingLeft="16dp"
        android:text="反应问题类型"/>

    <RadioGroup
        android:id="@+id/rg_select_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/rb_login"
            style="@style/radio_button_selector_sytle"
            android:layout_marginRight="6dp"
            android:checked="true"
            android:text="登录注册"/>


        <RadioButton
            android:id="@+id/rb_order"
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="订单问题"/>

        <RadioButton
            android:id="@+id/rb_pay"
            style="@style/radio_button_selector_sytle"
            android:layout_marginRight="6dp"
            android:text="支付体验"/>

        <RadioButton
            android:id="@+id/rb_other"
            style="@style/radio_button_selector_sytle"
            android:layout_marginRight="6dp"
            android:text="其他问题"/>

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_radio_pay_nomal"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/et_daily_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入建议，帮我们进步"
            android:padding="8dp"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:textColorHint="@color/text_grey_999999"
            android:textSize="12sp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightred"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_btn_red_"
            android:gravity="center"
            android:text="提 交"
            android:textColor="@color/white"/>
    </LinearLayout>


</LinearLayout>

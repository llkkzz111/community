<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nation1"
                style="@style/nation_img_style"/>


            <TextView
                android:id="@+id/tv_merchat_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                tools:text="天然牧场"
                android:textColor="@color/text_grey_333"
                android:textStyle="bold"/>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="销量第一 网红最爱"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_product1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd"/>

    <LinearLayout
        android:id="@+id/ll_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nation2"
                style="@style/nation_img_style"/>


            <TextView
                android:id="@+id/tv_merchat_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="天然牧场"
                android:maxLines="1"
                android:textColor="@color/text_grey_333"
                android:textStyle="bold"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="30dp"
            tools:text="销量第一 网红最爱"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_product2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#dddddd"/>

    <LinearLayout
        android:id="@+id/ll_item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="80dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_nation3"
                style="@style/nation_img_style"/>


            <TextView
                android:id="@+id/tv_merchat_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                tools:text="天然牧场"
                android:textColor="@color/text_grey_333"
                android:textStyle="bold"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:minHeight="30dp"
            tools:text="销量第一 网红最爱"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_product3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>
    </LinearLayout>


</LinearLayout>


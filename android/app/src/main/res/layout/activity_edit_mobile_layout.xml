<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            style="@style/personinfo_title_Style"
            android:text="@string/edit_mobile"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_grey_DDDDDD"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">


        <com.ocj.oms.view.ClearEditText
            android:id="@+id/et_mobile"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_clear"
            android:hint="请输入新手机号"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1"
            android:minHeight="45dp"
            android:textSize="14sp"/>


        <LinearLayout
            android:id="@+id/ll_code_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <com.ocj.oms.view.ClearEditText
                android:id="@+id/et_verify_code"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/icon_clear"
                android:hint="@string/hint_input_mobilecode"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:textSize="14sp"/>

            <com.ocj.oms.view.TimerTextView
                android:id="@+id/timmer_get_code"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_verify_code"
                android:gravity="center"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/btn_fetch_verify_code"
                android:textColor="@color/text_red_E5290D"
                android:textSize="12sp"
                app:timer_space="800"
                app:timer_total="120"/>

        </LinearLayout>


        <com.ocj.oms.mobile.view.SlideLockView
            android:id="@+id/slid_lockview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            app:slide_prospect="@color/grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="向右滑动到底部"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_lock_ocj"/>
        </com.ocj.oms.mobile.view.SlideLockView>


        <Button
            android:id="@+id/btn_change_mobile"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_selector_btn_register"
            android:gravity="center"
            android:text="确 定"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>
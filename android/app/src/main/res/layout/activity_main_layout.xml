                android:id="@+id/btn_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"/>

            <Button
                android:id="@+id/btn_reserve_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约订单"/>

            <Button
                android:id="@+id/btn_pay_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付安全校验"/>

            <Button
                android:id="@+id/btn_ui_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ui测试"/>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强制更新"/>

            <Button
                android:id="@+id/btn_finger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指纹"/>

            <Button
                android:id="@+id/btn_set_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置api环境"/>

            <Button
                android:id="@+id/btn_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通知栏下载"/>

            <Button
                android:id="@+id/btn_video_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频详情"/>

            <Button
                android:id="@+id/btn_jzvideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试全屏直播"/>


        </LinearLayout>

    </ScrollView>

    <com.ocj.oms.view.BottomNavigationViewEx
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemIconTint="@color/selector_item_gray_color"
        app:itemTextColor="@color/selector_item_gray_color"
        app:menu="@menu/menu_navigation"/>
</LinearLayout>

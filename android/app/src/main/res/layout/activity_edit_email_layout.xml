<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back"/>

        <TextView
            style="@style/personinfo_title_Style"
            android:text="@string/edit_email"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_grey_DDDDDD"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minHeight="45dp"
            >

            <!--输入账户名-->
            <com.ocj.oms.view.ClearEditText
                android:id="@+id/et_email"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_marginTop="4dp"
                android:drawableRight="@drawable/icon_clear"
                android:focusableInTouchMode="true"
                android:hint="请输入新邮箱"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="14sp"/>
        </LinearLayout>


        <com.ocj.oms.mobile.view.SlideLockView
            android:id="@+id/slid_lockview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            app:slide_prospect="@color/grey">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="向右滑动到底部"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_lock_ocj"/>
        </com.ocj.oms.mobile.view.SlideLockView>


        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_selector_btn_register"
            android:gravity="center"
            android:text="确 定"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>
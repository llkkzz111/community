<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="第20170601期 双色球"
        android:textColor="@color/text_black_333333"
        android:textSize="@dimen/text_thirteen_sp"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="等待开奖"
        android:textColor="@color/text_grey_666666"
        android:textSize="@dimen/text_thirteen_sp"/>

    <LinearLayout
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_number1"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number2"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number3"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number4"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number5"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number6"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/text_red_E5290D"
            android:textSize="@dimen/text_thirteen_sp"/>

        <TextView
            android:id="@+id/tv_number7"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/blue_circle"
            android:gravity="center"
            android:text="01"
            android:textColor="@color/lottery_blue"
            android:textSize="@dimen/text_thirteen_sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ll_number"
        android:background="@color/text_grey_DDDDDD"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="@dimen/dp_10"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_dougou_def"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_product"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp">

            <TextView
                android:id="@+id/tv_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主播推荐"
                android:textColor="@color/text_red_ed1c41"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_hot"
                android:gravity="left"
                android:maxLines="2"
                tools:text="天然牧场天然牧场天然牧场天然牧场天然牧"
                android:textColor="@color/text_black_444444"
                />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/free_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_vip_selected"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:text="赠品"
                android:textColor="@color/text_red_ed1c41"
                android:textSize="14sp"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/grey_trans"
                android:visibility="invisible"
                tools:text="123456663"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@color/lightred"
                android:textSize="18sp"
                tools:text="￥258"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/shape_create_comment"
                android:gravity="center"
                android:text="积"
                android:textColor="@color/white"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="@color/lightred"
                android:textSize="14sp"
                tools:text="303"/>


            <TextView
                android:id="@+id/tv_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="库存紧张"
                android:textColor="@color/text_red_f35f79"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>





<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:minHeight="200dp"
              android:orientation="vertical"
              android:padding="3dp">

    <com.ocj.oms.mobile.view.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/relationIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_dougou_def"/>
    </com.ocj.oms.mobile.view.SquareRelativeLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/rabateTv"
                android:layout_width="42dp"
                android:layout_height="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_global_discont"
                android:gravity="center"
                android:textColor="@color/text_red_ed1c41"
                android:textSize="@dimen/sp_12"
                tools:text="4.5折"/>

            <ImageView
                android:id="@+id/iv_nation"
                style="@style/nation_img_style"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:maxLines="2"
            android:paddingLeft="3dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="                奥奥林巴斯呵呵呵奥林巴斯呵呵呵奥林巴斯呵呵呵奥林巴斯呵呵呵林巴斯呵呵呵呵呵呵呵13113131313"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/text_red_ed1c41"
                android:textSize="14sp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/text_red_ed1c41"
                android:textSize="18sp"
                tools:text="602"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvZengpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/text_red_40FF6750"
            android:padding="1dp"
            android:text="赠品"
            android:textColor="@color/text_red_E5290D"
            android:textSize="11sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="库存紧张"
            android:textColor="@color/text_red_f35f79"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="97dp"
        android:background="@drawable/icon_coupon_left"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_price_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/tv_discount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8折"
                android:textColor="@color/white"
                android:textSize="30sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_accept_vocher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_white"
            android:gravity="center"
            android:padding="@dimen/padding_five_dp"
            android:text="立即领取"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2.83">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_coupon_right"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/tv_vocher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="甄选生活专营店店铺券"
                android:textColor="@color/text_black_333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="12dp"
                android:singleLine="true"
                android:text="甄选生活铺券满100享受8折土豪速来"
                android:textColor="@color/text_grey_666666"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv_vocher_valid_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="@dimen/padding_five_dp"
                android:singleLine="true"
                android:text="有效期至2018年8月8日"
                android:textColor="@color/text_grey_666666"
                android:textSize="11sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_five_dp"
            android:src="@drawable/icon_coupon_bg"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_image"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:maxWidth="90dp"
            android:text="      德国进口可爱儿童用安全aaaaa"
            android:textColor="@color/text_grey_333"
            android:textSize="@dimen/text_thirteen_sp"/>

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/nation_img_style"
            android:layout_below="@id/iv_image"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/lightred"
                android:textSize="14sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/lightred"
                android:textSize="18sp"
                tools:text="389.8"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_goods"
        android:padding="10dp"
        android:text="查\n看\n更\n多"
        android:textColor="@color/text_grey_999999"
        android:textSize="@dimen/text_twelve_sp"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:minHeight="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:src="@drawable/icon_checkbox_normal_bg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/icon_coupon_left"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discount_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="￥80"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/tv_accept_vocher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="@dimen/padding_five_dp"
                android:text="满500元可用"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.56"
            android:background="@drawable/icon_coupon_right"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_ten_dp">

            <TextView
                android:id="@+id/tv_vocher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="甄选生活专营店店铺券"
                android:textColor="@color/text_black_333333"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="@dimen/padding_five_dp"
                android:singleLine="true"
                android:text="甄选生活铺券满100享受8折土豪速来"
                android:textColor="@color/text_black_333333"
                android:textSize="12sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_vocher_valid_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="@dimen/padding_five_dp"
                android:singleLine="true"
                android:text="有效期至2018年8月8日"
                android:textColor="@color/text_black_333333"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_no_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_coupon"
        android:layout_marginBottom="15dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:src="@drawable/icon_checkbox_normal_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不使用抵用券"
            android:textColor="@color/text_black_333333"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>

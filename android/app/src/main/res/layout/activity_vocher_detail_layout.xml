<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical">
    <!--title bar-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_integral_bg"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/icon_back_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="抵用券详情"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_go_grabvocher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_ten_dp"
                android:background="@drawable/shape_white"
                android:gravity="center"
                android:padding="4dp"
                android:text="抢券"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten_dp"
            android:layout_marginLeft="@dimen/margin_thirty_five_dp"
            android:layout_marginTop="@dimen/margin_ten_dp"
            android:text="可用券（张）"
            android:textColor="@color/white"
            android:textSize="@dimen/text_fourteen_sp"/>

        <TextView
            android:id="@+id/tv_vocher_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_thirty_five_dp"
            tools:text="18"
            android:textColor="@color/white"
            android:textSize="36sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <com.ocj.oms.view.ClearEditText
            android:id="@+id/et_exchange_input"
            style="@style/EditTextStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_normal"
            android:digits="@string/filter_txt"
            android:drawableRight="@drawable/icon_clear"
            android:hint="@string/input_exchange"
            android:maxLines="1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_exchange_commit"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:background="@drawable/radius_tv_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/exchange_commit"
            android:textColor="@color/white"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/text_grey_EEEEEE"/>


    <RadioGroup
        android:id="@+id/rg_select_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <RadioButton
            android:id="@+id/rb_all"
            style="@style/radio_button_selector_sytle"
            android:layout_marginRight="6dp"
            android:checked="true"
            android:text="全部"/>


        <RadioButton
            android:id="@+id/rb_unuse"
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="未使用"/>

        <RadioButton
            android:id="@+id/rb_used"
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:text="已使用"/>

        <RadioButton
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:text="已使用"
            android:visibility="invisible"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_grey_DDDDDD"/>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    </RelativeLayout>

    <include
        android:id="@+id/inc_list"
        layout="@layout/inc_ptr_recycle_view_layout"/>
</LinearLayout>

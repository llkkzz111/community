<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_left_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:src="@drawable/icon_close_grey"/>


        <TextView
            android:id="@+id/tv_login_changetype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="@string/login_bypwd"
            android:textColor="@color/text_grey_666666"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_grey_DDDDDD"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_user"/>

        <TextView
            android:id="@+id/tv_name_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="戚一鸣，欢迎登录！"
            android:textColor="@color/text_black_333333"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_switch_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="切换账号"
            android:textColor="@color/grey_trans"
            android:textSize="14sp"/>


        <LinearLayout
            android:id="@+id/ll_code_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <com.ocj.oms.view.ClearEditText
                android:id="@+id/et_med_getcode"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_normal"
                android:drawableRight="@drawable/icon_clear"
                android:hint="@string/hint_input_mobilecode"
                android:inputType="number"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_verify_code"
                android:gravity="center"
                android:minWidth="80dp"
                android:padding="5dp"
                android:text="@string/btn_fetch_verify_code"
                android:textColor="@color/text_red_E5290D"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pwd_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ocj.oms.view.ClearEditText
                android:id="@+id/et_password"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/icon_clear"
                android:hint="@string/hint_input_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/iv_pwd_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:src="@drawable/ic_password_selecter"/>
        </LinearLayout>

        <Button
            android:id="@+id/login_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/ic_btn_red_"
            android:text="登 录"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>


    <com.ocj.oms.mobile.view.CallTextView
        android:id="@+id/tv_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/login_help"
        android:textColor="@color/text_grey_666666"
        android:textSize="13sp"/>
</LinearLayout>
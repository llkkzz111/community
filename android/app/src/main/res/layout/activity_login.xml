<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--title bar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_close_grey" />

        <ImageView
            android:id="@+id/iv_title_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_user"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title_third_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_account_association"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_go_rapid_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingRight="16dp"
            android:text="@string/title_rapid_register"
            android:textColor="@color/text_grey_666666"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_grey_DDDDDD"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_user"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_login_greet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/text_login_welcome"
        android:textColor="@color/text_black_333333"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="20dp">

        <!--输入账户名-->
        <com.ocj.oms.view.ClearEditText
            android:id="@+id/et_account"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_edittext_normal"
            android:drawableRight="@drawable/icon_clear"
            android:focusableInTouchMode="true"
            android:hint="@string/hint_login_edit"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#999999"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />
        <!--输入密码-->
        <LinearLayout
            android:id="@+id/ll_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="end"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/bg_edittext_normal"
                android:orientation="horizontal">

                <com.ocj.oms.view.ClearEditText
                    android:id="@+id/et_pwd"
                    style="@style/EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/icon_clear"
                    android:hint="@string/hint_input_password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/btn_pwd_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/ic_password_selecter" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pwd_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/text_forgot_pwd"
                android:textSize="12sp" />
        </LinearLayout>
        <!--输入验证码-->
        <LinearLayout
            android:id="@+id/ll_verify_code"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.ocj.oms.view.ClearEditText
                android:id="@+id/et_verify_code"
                style="@style/EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_normal"
                android:drawableRight="@drawable/icon_clear"
                android:hint="@string/hint_input_mobilecode"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btn_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_get_code_selector"
                android:padding="8dp"
                android:text="@string/btn_fetch_verify_code"
                android:textColor="@color/text_red_E5290D"
                android:textSize="13sp" />

        </LinearLayout>
        <!--输入姓名-->
        <com.ocj.oms.view.ClearEditText
            android:id="@+id/et_user_name"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_edittext_normal"
            android:drawableRight="@drawable/icon_clear"
            android:hint="@string/hint_input_name"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_slide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_error_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_alarm"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="密码三次输入错误，请通过验证"
                android:textColor="@color/text_red_E5290D" />

            <com.ocj.oms.mobile.view.SlideLockView
                android:id="@+id/slide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:slide_prospect="@color/grey">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="向右滑动到底部"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_lock_ocj" />
            </com.ocj.oms.mobile.view.SlideLockView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/radius_selector_btn_login"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <!--密码、动态密码切换-->
        <TextView
            android:id="@+id/tv_change_pwd_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/text_dynamic_pwd"
            android:textColor="@color/text_grey_666666"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <!--三方登录-->
    <include
        android:id="@+id/ll_third_party"
        layout="@layout/layout_third_party_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />


    <com.ocj.oms.mobile.view.CallTextView
        android:id="@+id/tv_problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/login_help"
        android:textColor="@color/text_grey_666666"
        android:textSize="13sp" />

</LinearLayout>
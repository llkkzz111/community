<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <!--title bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_integral_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/btn_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/icon_back_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预付款详情"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_ten_dp"
            android:layout_marginLeft="@dimen/margin_thirty_five_dp"
            android:layout_marginTop="@dimen/margin_ten_dp"
            android:text="当前预付款（元）"
            android:textColor="@color/white"
            android:textSize="@dimen/text_fourteen_sp"/>

        <TextView
            android:id="@+id/tv_imprest_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_thirty_five_dp"
            android:textColor="@color/white"
            android:textSize="36sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:paddingBottom="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_sixteen_dp"
                android:drawablePadding="@dimen/margin_two_dp"
                android:drawableRight="@drawable/icon_questions"
                android:text="什么是预付款"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/tab_imprest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <RadioButton
            android:id="@+id/btn_all"
            style="@style/radio_button_selector_sytle"
            android:layout_marginRight="6dp"
            android:checked="true"
            android:text="全部"/>

        <RadioButton
            android:id="@+id/btn_usage"
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="使用记录"/>

        <RadioButton
            android:id="@+id/btn_obtain"
            style="@style/radio_button_selector_sytle"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="获取记录"/>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

    </RelativeLayout>

    <include
        android:id="@+id/inc_list"
        layout="@layout/inc_ptr_recycle_view_layout"/>
</LinearLayout>

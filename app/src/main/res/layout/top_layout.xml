<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/targets_fifty_dp">

    <TextView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/targets_fifty_dp"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/icon_back_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_thirteen_dp"
        android:paddingRight="@dimen/padding_thirteen_dp"
        android:src="@drawable/icon_back_bg"
        android:textSize="@dimen/text_fourteen_sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_fifty_dp"
        android:layout_marginRight="@dimen/margin_fifty_dp"
        android:maxLines="1"
        android:textColor="@color/text_default_color"
        android:textSize="@dimen/text_seventeen_sp" />

    <TextView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/targets_fifty_dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/icon_title_add"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_thirteen_dp"
        android:paddingRight="@dimen/padding_thirteen_dp"
        android:textColor="@color/tab_check_color"
        android:textSize="@dimen/text_fourteen_sp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/grey" />
</RelativeLayout>
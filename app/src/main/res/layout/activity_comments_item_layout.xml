<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_thirteen_dp">


    <ImageView
        android:id="@+id/iv_comment_item_head"
        android:layout_width="@dimen/targets_thirty_seven_dp"
        android:layout_height="@dimen/targets_thirty_seven_dp"
        android:layout_marginRight="@dimen/margin_thirteen_dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#6a7f77"
                android:textSize="@dimen/text_fifteen_sp" />

            <TextView
                android:id="@+id/tv_comment_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_five_dp"
                android:layout_marginRight="@dimen/margin_ten_dp"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#8f8f8f"
                android:textSize="@dimen/text_twelve_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comments_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:textColor="#181818"
            android:textSize="@dimen/text_fourteen_sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#a2a2a2"
                android:textSize="@dimen/text_twelve_sp" />


            <TextView
                android:id="@+id/tv_comment_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/padding_three_dp"
                android:gravity="center_vertical"
                android:textColor="#5a6e6d"
                android:textSize="@dimen/text_twelve_sp" />

            <ImageView
                android:id="@+id/iv_comment_vote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_comment_like_count"
                android:paddingLeft="@dimen/padding_twenty_five_dp"
                android:paddingRight="@dimen/padding_ten_dp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
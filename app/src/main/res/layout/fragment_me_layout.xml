<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.community.equity.view.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/viewsub_common_view_layout"/>

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_margin="@dimen/margin_eleven_dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/text_sixteen_sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:maxLines="1"
                        android:text="@string/text_see_perfile"
                        android:textColor="#a2a2a2"
                        android:textSize="@dimen/text_fourteen_sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/mine_line_bg"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_fifty_three_dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_shengpay_account"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_me_shengpay_account"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/margin_eleven_dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_investments_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_fifty_three_dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_investment"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_me_investments_pro"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>

                <TextView
                    android:id="@+id/tv_investment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dialog_ok_default"
                    android:paddingLeft="@dimen/padding_four_dp"
                    android:paddingRight="@dimen/padding_four_dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/margin_eleven_dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_launched_pitches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"

                android:minHeight="@dimen/targets_fifty_three_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_create"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_me_launched_pitches"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>

                <TextView
                    android:id="@+id/tv_pitches_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dialog_ok_default"
                    android:paddingLeft="@dimen/padding_four_dp"
                    android:paddingRight="@dimen/padding_four_dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/margin_eleven_dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_request_calls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_fifty_three_dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_discuss"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_me_request_calls"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>

                <TextView
                    android:id="@+id/tv_call_sent_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dialog_ok_default"
                    android:paddingLeft="@dimen/padding_four_dp"
                    android:paddingRight="@dimen/padding_four_dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="@dimen/margin_eleven_dp"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_lead_investors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_fifty_three_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_collar_vote"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_me_leader_invest"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>

                <TextView
                    android:id="@+id/tv_lead_investors_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dialog_ok_default"
                    android:paddingLeft="@dimen/padding_four_dp"
                    android:paddingRight="@dimen/padding_four_dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:visibility="gone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/mine_line_bg"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"/>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_fifty_three_dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="80dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_mine_setting"/>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_setting"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_sixteen_sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_eleven_dp"
                    android:src="@drawable/icon_next_bg"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mine_line_bg"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
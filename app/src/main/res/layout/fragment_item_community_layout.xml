<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/targets_sixty_dp"
    android:orientation="vertical"
    android:padding="@dimen/padding_eleven_dp">

    <TextView
        android:id="@+id/tv_community_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="#181818"
        android:textSize="@dimen/text_seventeen_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_community_item_head"
            android:layout_width="33dp"
            android:layout_height="33dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_community_item_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#5a6e6d"
                android:textSize="@dimen/text_fourteen_sp" />

            <TextView
                android:id="@+id/tv_community_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_five_dp"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#a2a2a2"
                android:textSize="@dimen/text_twelve_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_community_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#5a6e6d"
            android:textSize="@dimen/text_fourteen_sp" />
    </LinearLayout>
</LinearLayout>
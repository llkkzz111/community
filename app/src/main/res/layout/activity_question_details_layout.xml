<?xml version="1.0" encoding="utf-8"?>
<com.community.equity.view.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.community.equity.view.TopView
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/viewsub_common_view_layout" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_thirteen_dp">

                        <ImageView
                            android:id="@+id/iv_user_head"
                            android:layout_width="@dimen/targets_thirty_seven_dp"
                            android:layout_height="@dimen/targets_thirty_seven_dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="top"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:textColor="#5a6e6d"
                                android:textSize="@dimen/text_fourteen_sp" />

                            <TextView
                                android:id="@+id/tv_user_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_five_dp"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:textColor="#a2a2a2"
                                android:textSize="@dimen/text_thirteen_sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/margin_thirteen_dp"
                        android:layout_marginRight="@dimen/margin_thirteen_dp"
                        android:background="@color/grey" />


                    <com.community.equity.view.FixGridLayout
                        android:id="@+id/fgl_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="@dimen/margin_eleven_dp"
                        android:layout_marginRight="@dimen/margin_eleven_dp"
                        android:layout_marginTop="8dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/margin_eleven_dp"
                        android:layout_marginRight="@dimen/margin_eleven_dp"
                        android:background="@color/grey" />

                    <TextView
                        android:id="@+id/tv_question_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_eleven_dp"
                        android:layout_marginRight="@dimen/margin_eleven_dp"
                        android:layout_marginTop="@dimen/margin_eleven_dp"
                        android:textColor="#3f3f3f"
                        android:textSize="@dimen/text_eighteen_sp" />

                    <com.community.equity.view.CDWebView
                        android:id="@+id/wvQuestionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_eleven_dp"
                        android:layout_marginRight="@dimen/margin_eleven_dp"
                        android:layout_marginTop="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_eleven_dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_fifteen_dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_follow_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="@dimen/margin_eleven_dp"
                            android:textColor="#5a6e6d"
                            android:textSize="@dimen/text_fourteen_sp" />

                        <TextView
                            android:id="@+id/btn_follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/btn_follow_bg"
                            android:gravity="center_horizontal"
                            android:minWidth="90dp"
                            android:paddingBottom="4dp"
                            android:paddingTop="4dp"
                            android:text="@string/text_follow"
                            android:textColor="@color/btn_follow_text_color"
                            android:textSize="@dimen/text_fourteen_sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/grey" />


                    <LinearLayout
                        android:id="@+id/ll_no_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="60dp"
                            android:layout_marginTop="60dp"
                            android:drawablePadding="@dimen/padding_ten_dp"
                            android:drawableTop="@drawable/img_no_answers_bg"
                            android:gravity="center"
                            android:text="@string/text_no_answers"
                            android:textColor="#cacaca"
                            android:textSize="@dimen/text_seventeen_sp" />
                    </LinearLayout>

                    <com.community.equity.view.MyListView
                        android:id="@+id/lv_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/grey"
                        android:dividerHeight="1px"
                        android:listSelector="@drawable/list_view_list_selector_bg" />

                    <View
                        android:id="@+id/view_bootom_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/grey"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_invite_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_three_dp"
                    android:drawableTop="@drawable/icon_add_content"
                    android:gravity="center"
                    android:padding="@dimen/padding_three_dp"
                    android:text="@string/text_invited_answer"
                    android:textColor="#a2a2a2"
                    android:textSize="@dimen/text_twelve_sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/tv_add_answer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_three_dp"
                    android:drawableTop="@drawable/icon_add_answer"
                    android:gravity="center"
                    android:padding="@dimen/padding_three_dp"
                    android:text="@string/text_add_answer"
                    android:textColor="#a2a2a2"
                    android:textSize="@dimen/text_twelve_sp" />

                <TextView
                    android:id="@+id/tv_answer_review_me"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_three_dp"
                    android:drawableTop="@drawable/icon_review_me"
                    android:gravity="center"
                    android:padding="@dimen/padding_three_dp"
                    android:text="@string/text_see_my_answer"
                    android:textColor="#a2a2a2"
                    android:textSize="@dimen/text_twelve_sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.community.equity.view.bottomsheet.BottomSheetLayout>

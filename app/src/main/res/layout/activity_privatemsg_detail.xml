<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_context_default"
              android:orientation="vertical">

    <com.choudao.equity.view.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_sixteen_dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_privatemsg_detail_user"
                android:layout_width="58dp"
                android:layout_height="58dp"/>

            <TextView
                android:id="@+id/tv_privatemsg_detail_user"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="58dp"
                android:textSize="@dimen/text_twelve_sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_privatemsg_detail_add"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginLeft="34dp"
            android:background="@drawable/selector_add_user"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="14dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/targets_fifty_three_dp"
            android:paddingLeft="@dimen/padding_sixteen_dp"
            android:paddingRight="@dimen/padding_sixteen_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="置顶聊天"
                android:textColor="@color/text_default_color"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_privatemsg_top"
                style="@style/SwitchCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/list_device_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/targets_fifty_three_dp"
            android:paddingLeft="@dimen/padding_sixteen_dp"
            android:paddingRight="@dimen/padding_sixteen_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="消息免打扰"
                android:textColor="@color/text_default_color"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_privatemsg_mute"
                style="@style/SwitchCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="14dp"
        android:background="@color/grey"/>

    <LinearLayout
        android:id="@+id/ll_privatemsg_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_list_selector_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/targets_fifty_three_dp"
        android:paddingLeft="@dimen/padding_sixteen_dp"
        android:paddingRight="@dimen/padding_sixteen_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空聊天记录"
            android:textColor="@color/text_default_color"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="14dp"
            android:background="@color/grey"/>

        <LinearLayout
            android:id="@+id/ll_privatemsg_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_list_selector_bg"
            android:gravity="center_vertical"
            android:minHeight="@dimen/targets_fifty_three_dp"
            android:paddingLeft="@dimen/padding_sixteen_dp"
            android:paddingRight="@dimen/padding_sixteen_dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="投诉举报"
                android:textColor="@color/text_default_color"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_next_bg"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey"/>
    </LinearLayout>
</LinearLayout>
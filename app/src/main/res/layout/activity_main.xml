<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <FrameLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/targets_fifty_dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_menu_community_bg"
                android:gravity="center"
                android:text="@string/text_tab_home"
                android:textColor="@color/tab_main_text_color"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_session"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/tab_menu_message_bg"
                    android:gravity="center"
                    android:text="@string/text_tab_message"
                    android:textColor="@color/tab_main_text_color"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four_dp"
                    android:paddingLeft="@dimen/padding_twenty_eight_dp">

                    <TextView
                        android:id="@+id/tv_activity_main_msgcount"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_action_message"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_contacts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableTop="@drawable/tab_menu_contact_bg"
                    android:gravity="center"
                    android:text="@string/text_my_contacts"
                    android:textColor="@color/tab_main_text_color"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_four_dp"
                    android:paddingLeft="@dimen/padding_twenty_eight_dp">

                    <TextView
                        android:id="@+id/tv_activity_main_newfriend_count"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_action_message"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_motion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_menu_motion_bg"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/tab_main_text_color"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_menu_me_bg"
                android:gravity="center"
                android:text="@string/text_tab_me"
                android:textColor="@color/tab_main_text_color"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
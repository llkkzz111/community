<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_context_default"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header_contacts_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/targets_sixty_dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/targets_sixty_dp"
            android:layout_height="@dimen/targets_sixty_dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_local_search"
            android:textColor="@color/tab_uncheck_color"
            android:textSize="@dimen/text_sixteen_sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="8dp"
        android:background="@color/list_device_color" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_device_color" />

    <LinearLayout
        android:id="@+id/ll_header_contacts_new_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="@dimen/targets_sixty_dp"
            android:layout_height="@dimen/targets_sixty_dp">

            <ImageView
                android:id="@+id/iv_header_contacts_new_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_eight_dp"
                android:src="@drawable/ic_new_friends" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/text_new_friends"
            android:textColor="@color/text_default_color"
            android:textSize="@dimen/text_sixteen_sp" />

        <TextView
            android:id="@+id/tv_header_contacts_new_count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_action_message"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_twelve_dp"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
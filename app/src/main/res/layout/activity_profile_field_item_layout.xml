<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="@dimen/targets_fifty_dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_field_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_thirteen_dp"
        android:layout_weight="1"
        android:textColor="#606060"
        android:textSize="@dimen/text_fourteen_sp" />

    <TextView
        android:id="@+id/tv_field_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_five_dp"
        android:textSize="@dimen/text_fourteen_sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/margin_thirteen_dp"
        android:src="@drawable/icon_comment_unlike" />
</LinearLayout>
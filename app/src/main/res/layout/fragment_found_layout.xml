<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_line_bg"
    android:orientation="vertical">

    <com.community.equity.view.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_trading_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_list_selector_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/targets_fifty_three_dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_trading_center"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="@dimen/margin_ten_dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="交易中心"
            android:textColor="#181818"
            android:textSize="@dimen/text_sixteen_sp" />

        <TextView
            android:id="@+id/tv_trading_center_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen_dp"
            android:layout_marginRight="@dimen/margin_eleven_dp"
            android:src="@drawable/icon_next_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/ll_community"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_list_selector_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/targets_fifty_three_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_community"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="@dimen/margin_ten_dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="问答社区"
            android:textColor="#181818"
            android:textSize="@dimen/text_sixteen_sp" />

        <TextView
            android:id="@+id/tv_community_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen_dp"
            android:layout_marginRight="@dimen/margin_eleven_dp"
            android:src="@drawable/icon_next_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/ll_vc_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_view_list_selector_bg"
        android:gravity="center_vertical"
        android:minHeight="@dimen/targets_fifty_three_dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vc_information"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_margin="@dimen/margin_ten_dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="创投资讯"
            android:textColor="#181818"
            android:textSize="@dimen/text_sixteen_sp" />

        <TextView
            android:id="@+id/tv_vc_information_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_fifteen_dp"
            android:layout_marginRight="@dimen/margin_eleven_dp"
            android:src="@drawable/icon_next_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/padding_thirteen_dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_answer_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_answer_like_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_five_dp"
            android:background="@color/dialog_ok_checked"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_twelve_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_thirteen_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_answer_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:textColor="#6a7f77"
                android:textSize="@dimen/text_fourteen_sp" />

            <TextView
                android:id="@+id/tv_answer_user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_five_dp"
                android:layout_marginRight="@dimen/margin_ten_dp"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#8f8f8f"
                android:textSize="@dimen/text_thirteen_sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer_safe_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:maxLines="4"
            android:textColor="#181818"
            android:textSize="@dimen/text_fifteen_sp" />
    </LinearLayout>
</LinearLayout>
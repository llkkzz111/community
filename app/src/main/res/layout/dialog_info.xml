<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_dialog_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_dialog_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textColor="#181818"
        android:textSize="@dimen/text_eighteen_sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_dialog_info_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_forty_dp"
        android:layout_marginRight="@dimen/margin_forty_dp"
        android:gravity="center"
        android:padding="@dimen/padding_eight_dp"
        android:text="@string/text_confirm"
        android:textColor="@color/tab_check_color"
        android:textSize="@dimen/text_eighteen_sp" />

</LinearLayout>
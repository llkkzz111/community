<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.choudao.equity.view.TopView
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/viewsub_common_view_layout" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_context_default"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_activity_privatemsg_profile_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_view_list_selector_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="84dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_activity_privatemsg_profile_head"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="19dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_activity_privatemsg_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/text_default_color"
                        android:textSize="@dimen/text_eighteen_sp" />


                    <TextView
                        android:id="@+id/tv_activity_privatemsg_profile_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textSize="@dimen/text_fourteen_sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_activity_privatemsg_profile_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_fifteen_dp"
                android:layout_marginRight="@dimen/margin_fifteen_dp"
                android:src="@drawable/icon_next_bg" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_activity_privatemsg_profile_normalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="14dp"
                android:background="@color/grey" />


            <LinearLayout
                android:id="@+id/ll_activity_privatemsg_profile_setRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_sixty_five_dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="94dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_remark" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="设置备注"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_seventeen_sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_fifteen_dp"
                    android:src="@drawable/icon_next_bg" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="14dp"
                android:background="@color/grey" />

            <LinearLayout
                android:id="@+id/ll_activity_privatemsg_profile_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_view_list_selector_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/targets_sixty_five_dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="94dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_profile_address_bg" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_activity_privatemsg_profile_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#181818"
                        android:textSize="@dimen/text_seventeen_sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_fifteen_dp"
                    android:background="@color/grey" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_activity_privatemsg_profile_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_list_selector_bg"
                android:gravity="center_vertical"
                android:minHeight="@dimen/targets_sixty_five_dp"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="94dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_profile_action_bg" />
                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_whole_motion"
                    android:textColor="#181818"
                    android:textSize="@dimen/text_seventeen_sp" />

                <TextView
                    android:id="@+id/tv_activity_privatemsg_profile_dynamicCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_fifteen_dp"
                    android:layout_marginRight="@dimen/margin_fifteen_dp"
                    android:src="@drawable/icon_next_bg" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_activity_privatemsg_profile_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/targets_fifty_dp"
            android:layout_marginLeft="@dimen/margin_fifteen_dp"
            android:layout_marginRight="@dimen/margin_fifteen_dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_follow_bg"
            android:gravity="center"
            android:text="@string/text_send_message"
            android:textColor="@color/btn_follow_text_color"
            android:textSize="@dimen/text_sixteen_sp" />
    </LinearLayout>

</LinearLayout>
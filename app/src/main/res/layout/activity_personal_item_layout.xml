<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_eleven_dp">

    <ImageView
        android:id="@+id/iv_personal_item_head"
        android:layout_width="@dimen/targets_thirty_seven_dp"
        android:layout_height="@dimen/targets_thirty_seven_dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_eleven_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_personal_item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#5a6e6d"
            android:textSize="@dimen/text_fourteen_sp" />

        <TextView
            android:id="@+id/tv_personal_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:textColor="#a2a2a2"
            android:textSize="@dimen/text_twelve_sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_fifteen_dp"
        android:src="@drawable/icon_next_bg" />
</LinearLayout>